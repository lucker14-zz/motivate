body, html
    position relative
    padding 0
    margin 0
    min-height 100vh
    width 100%
    min-width 320px


*
    font-family "Calibri", sans-serif
    box-sizing border-box

    &:focus, &:active
        outline none !important


img, svg
    border 0
    outline none
    max-width 100%


ul,li
    margin 0
    padding 0
    list-style-type none


h1, h2, h3, h4, h5, h6, p, a, button, input, textarea, label
    margin 0
    padding 0
    text-decoration none
    -webkit-font-smoothing antialiased


ul, li
    padding 0
    margin 0
    list-style-type none
    

div.absolute-background
    position absolute

div.container
    display flex
    position relative
    
    &--outer
        width 100vw
        flex-flow column wrap
        justify-content center
        align-items center
        padding 40px
        
    &--inner
        width 1280px
        flex-flow column wrap
        justify-content center
        align-items center
        
        @media screen and (max-width 1280px)
            width 100%
   

div.content-holder
    
    &--hori
        flex-flow row wrap
        justify-content space-between
        align-items flex-start


div.content-box
    flex-flow row wrap
    justify-content center
    align-items center

    &--vertical
        flex-flow column wrap