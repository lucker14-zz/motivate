div.container.container--outer.hero
    min-height 66.04193139vw
    div.absolute-background
        background-image url('assets/bg-hero.jpg')
        background-size cover
        background-position center
        background-repeat no-repeat
        width 100vw
        height 66.04193139vw
        
    div.container.container--inner
        &.absolute
            position absolute
            bottom 0
            left 0
            right 0 
            margin-left auto
            margin-right auto
