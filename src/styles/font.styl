@font-face {
    font-family: 'Calibri';
    src: url('assets/calibri/Calibri.ttf');
}

@font-face {
    font-family: 'Calibri Bold';
    src: url('assets/calibri/CALIBRIB.TTF');
}

@font-face {
    font-family: 'Calibri Italic';
    src: url('assets/calibri/CALIBRII.TTF');
}

@font-face {
    font-family: 'Calibri Bold-Italic';
    src: url('assets/calibri/CALIBRIZ.TTF');
}

h1
    font-size 42px
    font-family 'Roboto' sans-serif
    color $text_red
    text-transform lowercase
    
    &:first-letter
        text-transform capitalize

h2
    font-size 28px
    font-family 'Roboto' sans-serif
    color $text_black
    width 100%
    text-align center
    text-transform lowercase
    
    &:first-letter
        text-transform capitalize
    
h3
    font-size 20px
    font-family 'Roboto' sans-serif
    color $text_black
    text-transform lowercase
    
    &:first-letter
        text-transform capitalize
    

p, span
    font-size 16px
    font-family 'Roboto' sans-serif
    color $text_grey
    
    &.black
        color $text_black
    