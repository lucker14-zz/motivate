@font-face {
    font-family: 'Calibri';
    src: url('assets/calibri/Calibri.ttf');
}

@font-face {
    font-family: 'Calibri Bold';
    src: url('assets/calibri/CALIBRIB.TTF');
}

@font-face {
    font-family: 'Calibri Italic';
    src: url('assets/calibri/CALIBRII.TTF');
}

@font-face {
    font-family: 'Calibri Bold-Italic';
    src: url('assets/calibri/CALIBRIZ.TTF');
}

h1
    font-size 30px
    font-family 'Calibri' sans-serif
    color $text_red

h2
    font-size 20px
    font-family 'Calibri' sans-serif
    color $text_black
    
h3
    font-size 11px
    font-family 'Calibri' sans-serif
    color $text_black
    

p
    font-size 10px
    font-family 'Calibri' sans-serif
    color $text_grey
    
    &.black
        color $text_black
    