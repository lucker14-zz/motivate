div.container.container--outer.team
    &#partners
        background-color #daddda

    div.container.container--inner
        h1
            margin-bottom 40px
            
        div.content-holder
            justify-content center
            
            div.content-box
                width 300px
                height 250px
                margin 0 20px
                margin-bottom 40px
                
                &.person:hover:not(.empty)
                    cursor pointer
                    
                    .text-box
                        background-color #455258

                
                &.person--team
                    div.text-box
                        border-top 2px solid #ab2628
                
                div.photo-box
                    width 100%
                    height 200px
                    
                    background-size cover
                    background-position center
                    background-repeat no-repeat
                    
                    
                    &#jan
                        background-image url('assets/team-photo/1802_jan.jpg')
                        
                    &#jiri
                        background-image url('assets/team-photo/1802_jiri.jpg')
                        
                    &#petr
                        background-image url('assets/team-photo/1802_petr.jpg')
                        
                    &#martin
                        background-image url('assets/team-photo/1802_martin.jpg')
                        
                    &#ivana
                        background-image url('assets/team-photo/1802_iva.jpg')
                        
                    &#barbora
                        background-image url('assets/team-photo/1802_bara.png')
                        
                    &#sarka
                        background-image url('assets/team-photo/1802_sarka_spatne_foto.jpg')
                        
                    &#ty
                        background-image url('assets/team-photo/1802_you.png')
                        background-color #f4f4f4
                        border-top: 1px solid $text_grey
                        border-left: 1px solid $text_grey
                        border-right: 1px solid $text_grey
                    
                div.text-box--inner
                    width 100%
                
                div.text-box
                    width 100%
                    height 60px
                    background-color #898992
                    padding 0 15px
                    position relative
                    
                    p.name
                        margin-top 8px
                        color white
                        font-size 18px
                        line-height 1
                        
                    p.position
                        color rgba(255,255,255,0.5)
                        // line-height 1
                            
                    a.social
                        width 17px
                        height 17px
                        background url("data:image/png;base64,") center center no-repeat
                        position absolute
                        top 18px
                        right 10px
                        
                        -webkit-transition: background 0.3s ease-in-out;
                        -moz-transition: background 0.3s ease-in-out;
                        -o-transition: background 0.3s ease-in-out;
                        transition: background 0.3s ease-in-out;
                        -webkit-transition: background .3s ease-in-out;
                        -o-transition: background .3s ease-in-out;
                        transition: background .3s ease-in-out;
                        
                        &:hover
                            transform scale(1.3)
                            background: url("data:image/png;base64,") center center no-repeat
                        