        h1
            margin-bottom 40px
            
        div.content-holder
            justify-content center
            
            div.content-box
                width 300px
                height 250px
                margin 0 50px
                
                &.person--team
                    div.text-box
                        border-top 2px solid #ab2628
                
                div.photo-box
                    width 100%
                    height 200px
                    
                div.text-box--inner
                    width 100%
                
                div.text-box
                    width 100%
                    height 50px
                    background-color #5e5f60
