div.container.container--outer.team
    &#partners
        background-color #daddda

    div.container.container--inner
        h1
            margin-bottom 40px
            
        div.content-holder
            justify-content center
            
            div.content-box
                width 300px
                height 250px
                margin 0 20px
                margin-bottom 20px
                
                &.person--team
                    div.text-box
                        border-top 2px solid #ab2628
                
                div.photo-box
                    width 100%
                    height 200px
                    
                    background-size cover
                    background-position center
                    background-repeat no-repeat
                    
                    
                    &#jan
                        background-image url('assets/team-photo/1802_jan.jpg')
                        
                    &#jiri
                        background-image url('assets/team-photo/1802_jiri.jpg')
                        
                    &#petr
                        background-image url('assets/team-photo/1802_petr.jpg')
                        
                    &#martin
                        background-image url('assets/team-photo/1802_martin.jpg')
                        
                    &#ivana
                        background-image url('assets/team-photo/1802_iva.jpg')
                        
                    &#barbora
                        background-image url('assets/team-photo/1802_barbora.jpg')
                        
                    &#sarka
                        background-image url('assets/team-photo/1802_sarka_spatne_foto.jpg')
                        
                    &#ty
                        background-image url('assets/ty.jpg')
                    
                div.text-box--inner
                    width 100%
                
                div.text-box
                    width 100%
                    height 50px
                    background-color #5e5f60
                    padding 0 15px
                    
                    p.name
                        margin-top 3px
                        color white
                        font-size 18px
                        
                    p.position
                        color $text_black
                        