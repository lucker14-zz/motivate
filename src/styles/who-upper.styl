div.container.container--outer.who-upper
    background-color #daddda
    min-height 590px
    // background-image url('assets/bg-who.png')
    background-size 1260px 590px
    background-repeat no-repeat
    
    &.en
        padding 40px 40px 17px
    
    @media screen and (max-width 600px)
        min-height 820px
        
    @media screen and (max-width 500px)
        min-height 900px
        
    @media screen and (max-width 400px)
        min-height 1000px

    
    div.absolute-background
        background-image url('assets/bg-who.jpg')
        background-size cover
        width 1280px
        height 640px
        max-height 100%
        
        &.en
            width 1350px

        @media screen and (max-width 1260px)
            background-size cover
            height 100%
            max-width 100vw
        
        @media screen and (max-width 750px)
            background-image none            

    div.container.container--inner
        div.text-container
            max-width 60%
            
            @media screen and (max-width 750px)
                max-width 100%

            h1
                margin-bottom 20px
                
            h2
                text-align left
                margin-top 60px
                
            p.bigger
                margin-bottom 30px
                font-size 24px
                
            p:not(.bigger)
                max-width 500px
                
            h2
                margin-bottom 20px